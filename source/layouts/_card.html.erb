<div class="container">
  <h2 class="text-center">Recent flats</h2>
<div class="row">
  <% data.users.each do |user| %>
  <div class="col-xs-4">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= user["background"] %>');">
      <div class="card-category"><%= user["location"] %></div>
      <div class="card-description">
        <h2><%= user["name"] %>'s home</h2>
        <p><%= user["tagline"] %></p>
        <p class="rating">
          <% number = user["rating"] %>
          <% number.times do %>
          <i class="fas fa-star" style="color: $yellow"></i>
          <% end %>
          <% (5 - number).times do %>
          <i class="fas fa-star" style="color: $gray"></i>
          <% end %>
        </p>
      </div>
      <img class="card-user" src="<%= user["avatar"] %>">
      <a class="card-link" href="#" ></a>
    </div>
  </div>
  <% end %>
</div>
</div>
